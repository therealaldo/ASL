<div id="row small-12 medium-12 large-12 columns">
    <header>
        <section class="small-4 medium-4 large-4" id="logo">
           <%= link_to image_tag('jac_logo.jpg'), root_path %>
        </section>
        <section class="small-6 medium-6 large-6" id="nav_right">
            <ul id="nav">
                  <li><%= link_to "HOME", root_path %></li>
                  <% if current_user %>
                  <li><a href="#" data-dropdown="hover1" data-options="is_hover:true; hover_timeout:5000">ME</a></li>
                      <ul id="hover1" class="f-dropdown" data-dropdown-content>
                          <li><%= link_to "PROFILE", profile_path %></li>
                          <li><%= link_to "PLAYLISTS", playlists_path %></li>
                          <li><%= link_to "FAVORITES", likes_path %></li>
                      </ul>
                  <li><%= link_to "LOG OUT", logout_path %></li>
                  <% else %>
                  <%= link_to "LOG IN", soundcloud_connect_path %>
                  <% end %>
            </ul>
        </section>
    </header>
</div>
<div id="row small-12 medium-12 large-12 columns">

<section class="small-12 medium-12 large-12 columns" id="profile">
<h2 id="left">Profile</h2>
<p><strong>Username:</strong> <%= @username %></p>
<p><strong>Full Name:</strong> <%= @fullname %></p>
<p><strong>City:</strong> <%= @city %></p>
<p><strong>Bio:</strong> <%= @description %></p>
<p id="edit"><%= link_to "EDIT", update_path %></p>
</section>
</div>
<footer>
      <section class="small-12 medium-12 large-12 columns" id="footer">
            <p> Copyright &copy; 2015 by JAC Music - All Rights Reserved </p>
      </section>
</footer>
