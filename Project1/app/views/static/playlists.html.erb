<div id="row small-12 medium-12 large-12 columns">
    <header>
        <section class="small-4 medium-4 large-4" id="logo">
            <%= link_to image_tag('jac_logo.jpg'), root_path %>
        </section>
        <section class="small-6 medium-6 large-6" id="nav_right">
            <ul id="nav">
                  <li><%= link_to "HOME", root_path %></li>
                  <% if current_user %>
                  <li><a href="#" data-dropdown="hover1" data-options="is_hover:true; hover_timeout:5000">ME</a></li>
                      <ul id="hover1" class="f-dropdown" data-dropdown-content>
                          <li><%= link_to "PROFILE", profile_path %></li>
                          <li><%= link_to "PLAYLISTS", playlists_path %></li>
                          <li><%= link_to "FAVORITES", likes_path %></li>
                      </ul>
                  <li><%= link_to "LOG OUT", logout_path %></li>
                  <% else %>
                  <%= link_to "LOG IN", soundcloud_connect_path %>
                  <% end %>
            </ul>
        </section>
    </header>
</div>
<div id="row small-12 medium-12 large-12 columns">
      <section class="small-12 medium-12 large-12 columns" id="pro_playlist">
            <h2 id="y_play">Your Playlists</h2>

            <% @playlists.each do |playlist| %>
                  <iframe id="playlist" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=<%= playlist.permalink_url %>&amp;auto_play=false&amp;buying=true&amp;liking=true&amp;download=true&amp;sharing=true&amp;show_artwork=true&amp;show_comments=true&amp;show_playcount=true&amp;show_user=true&amp;hide_related=false&amp;visual=true&amp;start_track=0&amp;callback=true">
                  </iframe>
            <% end %>
    </section>
</div>
<footer>
      <section class="small-12 medium-12 large-12 columns" id="footer">
            <p> Copyright &copy; 2015 by JAC Music - All Rights Reserved </p>
      </section>
</footer>
